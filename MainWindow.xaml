<Window x:Class="ColorPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorPicker"
        mc:Ignorable="d"
        Title="Color picker" Height="300" Width="400" KeyDown="KeyPress" MouseDoubleClick="Copy" ToolTip="">
    <Grid>
        <Label x:Name="Barva" Content="#......" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40"/>
        <Label Content="SPACE - pick at mouse position."  HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0, 0, 0, 20"/>
        <Label Content="Doubleclick (on window) copy to clipboard" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
